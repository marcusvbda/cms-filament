# Conectar ao servidor
sudo ssh -i "gravity-labs.pem" ubuntu@ec2-18-216-55-80.us-east-2.compute.amazonaws.com

# Instalar Git
sudo apt update
sudo apt install -y git

# Gerar chave SSH e adicionar ao GitHub
ssh-keygen
cat ~/.ssh/id_rsa.pub

# Clonar o reposit√≥rio
git clone git@github.com:marcusvbda/cms-filament.git
cd cms-filament/
cp .env.example .env
nano .env

# Instalar Docker
sudo apt-get update
sudo apt-get install -y docker.io docker-compose
sudo apt-get install docker-compose-v2
sudo usermod -aG docker ${USER}
newgrp docker
sudo systemctl start docker
sudo systemctl enable docker

# Executar os containers (exceto db)
sudo docker compose up -d --force-recreate

# Verificar os containers
sudo docker ps -a

# Executar comandos dentro do container
sudo docker exec -it Filament-CMS_APPLICATION sh
# Dentro do container:
git config --global --add safe.directory '*'
composer install
npm install
php artisan migrate
npm run build
php artisan config:cache
php artisan route:cache
composer dump-autoload -o
php artisan optimize
php artisan icons:cache
php artisan make:filament-user
